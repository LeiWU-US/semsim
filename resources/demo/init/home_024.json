{
  "network": {
    "host": "localhost",
    "port": "60123"

  },
  "controllers": [
    {
      "type": "Thermostat",
      "params": {
        "thermal_process": "#room_024",
        "attribute": "on",
        "friendly_name": "thermostat_024",
        "hysteresis": "2.242248*delta_degC",
        "target_temperature": "293.810152*kelvin",
        "subject": "#heater_024"
      },
      "module": "devices"
    },
    {
      "type": "Thermostat",
      "params": {
        "thermal_process": "#boiler_024",
        "attribute": "on",
        "friendly_name": "thermostat_boiler_024",
        "hysteresis": "10*delta_degC",
        "target_temperature": "328.15*kelvin",
        "subject": "#boiler_024"
      },
      "module": "devices"
    }
  ],
  "thermal": [
    {
      "type": "ThermalProcess",
      "params": {
        "initial_temperature": "291.975678*kelvin",
        "friendly_name": "room_024",
        "thermal_capacity": "4.445578*kWh/(kg*K)"
      },
      "module": "gridsim.thermal.core"
    },
    {
      "type": "TimeSeriesThermalProcess",
      "params": {
        "time_converter": "lambda t: t*units.hours",
        "time_series": "#example",
        "temperature_calculator": "lambda t: units.convert(units(t, units.degC), units.kelvin)",
        "friendly_name": "outside"
      },
      "module": "gridsim.thermal.element"
    },
    {
      "type": "ThermalCoupling",
      "params": {
        "from_process": "#room_024",
        "thermal_conductivity": "565.629524*W/(K*m)",
        "friendly_name": "room_024 to outside",
        "to_process": "#outside"
      },
      "module": "gridsim.thermal.core"
    }
  ],
  "electrical": {
    "attach": [
      {
        "device": "#heater_024",
        "bus": "Bus_024"
      },
      {
        "device": "#house_024",
        "bus": "Bus_024"
      },
      {
        "device": "#boiler_024",
        "bus": "Bus_024"
      }
    ],
    "branches": [
      {
        "two_port": "#Line_024",
        "friendly_name": "Branch_024",
        "bus_b": "Bus_024",
        "bus_a": "Slack Bus"
      }
    ],
    "devices": [
      {
        "type": "ElectricalTransmissionLine",
        "params": {
          "X": "0.2*ohm",
          "length": "1*m",
          "friendly_name": "Line_024"
        },
        "module": "gridsim.electrical.network"
      },
      {
        "type": "ElectroThermalHeaterCooler",
        "params": {
          "thermal_process": "#room_024",
          "friendly_name": "heater_024",
          "pwr": "7477.403806*watt",
          "efficiency_factor": "3.075934"
        },
        "module": "devices"
      },
      {
        "type": "TimeSeriesElectricalCPSElement",
        "params": {
          "time_converter": "lambda t: t*units.minute",
          "time_series": "#house_000024",
          "friendly_name": "house_024"
        },
        "module": "gridsim.electrical.element"
      },
      {
        "type": "Boiler",
        "params": {
          "temperature_in": "288.15*kelvin",
          "power": "2400*watt",
          "initial_temperature": "328.15*kelvin",
          "heat_transfer_coeff": "8*watt/(kelvin*(meter**2))",
          "friendly_name": "boiler_024",
          "time_series": "#boiler_000024",
          "thickness": "100mm",
          "time_converter": "lambda t: t*units.minute",
          "radius": "20cm",
          "height": "160cm"
        },
        "module": "devices"
      }
    ],
    "buses": [
      {
        "type": "ElectricalPQBus",
        "params": {
          "friendly_name": "Bus_024"
        },
        "module": "gridsim.electrical.network"
      }
    ]
  },
  "time_series": [
    {
      "friendly_name": "example",
      "reader": "CSVReader",
      "type": "SortedConstantStepTimeSeriesObject",
      "module": "gridsim.timeseries",
      "data": "../resources/demo/outside/default.csv"
    },
    {
      "friendly_name": "house_000024",
      "reader": "CSVReader",
      "type": "SortedConstantStepTimeSeriesObject",
      "module": "gridsim.timeseries",
      "data": "../resources/demo/houses/house_000024.csv"
    },
    {
      "friendly_name": "boiler_000024",
      "reader": "CSVReader",
      "type": "SortedConstantStepTimeSeriesObject",
      "module": "gridsim.timeseries",
      "data": "../resources/demo/boilers/house_000024.csv"
