      },
      "module": "gridsim.thermal.core"
    }
  ],
  "electrical": {
    "attach": [
      {
        "device": "#heater_028",
        "bus": "Bus_028"
      },
      {
        "device": "#house_028",
        "bus": "Bus_028"
      },
      {
        "device": "#boiler_028",
        "bus": "Bus_028"
      }
