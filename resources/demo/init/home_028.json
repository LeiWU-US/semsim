{
  "network": {
    "host": "localhost",
    "port": "60148"

  },
  "controllers": [
    {
      "type": "Thermostat",
      "params": {
        "thermal_process": "#room_028",
        "attribute": "on",
        "friendly_name": "thermostat_028",
